<%- include('partials/header') %>

<div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md w-full max-w-md text-gray-800 dark:text-gray-100">
    <h1 class="text-2xl font-semibold mb-6 text-center">Quirly</h1>

    <form method="POST" action="/" class="space-y-4">
        <input type="text" name="url" placeholder="Enter URL to shorten"
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
               required />
        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">Shorten
            URL</button>
    </form>

    <% if (shortUrl) { %>
        <div class="mt-8 text-center">
            <h2 class="text-lg font-medium">Short URL:</h2>
            <a href="<%= shortUrl %>" class="text-blue-400 hover:underline break-all" target="_blank" rel="noopener noreferrer"><%= shortUrl %></a>

            <h2 class="text-lg font-medium mt-4">QR Code:</h2>
            <img src="<%= qrCodeDataUrl %>" alt="QR Code" class="mx-auto mt-2 border rounded-lg shadow" />
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>